{
  "name": "electron-app",
  "version": "1.0.0",
  "description": "POS Electron Application",
  "author": {
    "name": "POS System",
    "email": "support@possystem.com"
  },
  "homepage": "https://github.com/yourusername/pos_electron",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "build:python": "node scripts/build-python-server.js",
    "build:win": "npm run build:python && tsc && vite build && electron-builder --win --x64",
    "build:linux": "npm run build:python && tsc && vite build && electron-builder --linux --x64",
    "build:all": "npm run build:python && tsc && vite build && electron-builder --win --linux --x64",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "clean": "rm -rf dist release"
  },
  "dependencies": {
    "@serialport/parser-readline": "^13.0.0",
    "escpos": "3.0.0-alpha.6",
    "escpos-usb": "3.0.0-alpha.4",
    "node-hid": "^3.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "serialport": "^13.0.0",
    "usb": "^2.16.0",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.0.0-beta.10",
    "@types/node": "^22.10.5",
    "@types/node-hid": "^3.0.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/usb": "^2.0.5",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8",
    "eslint": "^9.18.0",
    "tailwindcss": "^4.0.0-beta.10",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "build": {
    "appId": "com.pos.electron",
    "productName": "POS System",
    "npmRebuild": false,
    "nodeGypRebuild": false,
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../python-backend/dist/pos-server",
        "to": "python-server/pos-server",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.png",
      "artifactName": "${productName}-${version}-Windows-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "POS System",
      "installerIcon": "build/icon.png",
      "uninstallerIcon": "build/icon.png",
      "installerHeaderIcon": "build/icon.png",
      "license": "../../LICENSE",
      "deleteAppDataOnUninstall": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.png",
      "category": "Office",
      "artifactName": "${productName}-${version}-Linux-${arch}.${ext}",
      "desktop": {
        "Name": "POS System",
        "Comment": "Point of Sale System",
        "Categories": "Office;Finance;",
        "Terminal": false
      }
    },
    "deb": {
      "depends": ["gconf2", "gconf-service", "libnotify4", "libappindicator1", "libxtst6", "libnss3"]
    },
    "rpm": {
      "depends": ["libXScrnSaver"]
    }
  }
}
