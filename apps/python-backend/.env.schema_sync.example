# Schema Synchronization Configuration
# Copy this to .env and adjust as needed

# ============================================================================
# Enable/Disable Features
# ============================================================================

# Enable automatic schema synchronization on startup
SCHEMA_SYNC_AUTO_SYNC_ENABLED=true

# Enable file watching for automatic regeneration during development
SCHEMA_SYNC_WATCH_ENABLED=true

# Create backups before schema regeneration
SCHEMA_SYNC_BACKUP_ENABLED=true

# Validate generated schemas before writing
SCHEMA_SYNC_VALIDATION_ENABLED=true

# ============================================================================
# Environment Configuration
# ============================================================================

# Current environment: development, staging, production
SCHEMA_SYNC_ENVIRONMENT=development

# Enable schema sync in production (NOT RECOMMENDED)
SCHEMA_SYNC_ENABLE_IN_PRODUCTION=false

# ============================================================================
# Path Configuration (Optional - defaults provided)
# ============================================================================

# Path to models directory
# SCHEMA_SYNC_MODELS_PATH=src/database/models

# Path to manual schemas file
# SCHEMA_SYNC_MANUAL_SCHEMA_PATH=src/api/schemas.py

# Path for generated schemas
# SCHEMA_SYNC_GENERATED_SCHEMA_PATH=src/api/schemas_generated.py

# Directory for schema backups
# SCHEMA_SYNC_BACKUP_DIR=backups/schemas

# ============================================================================
# Behavior Settings
# ============================================================================

# Automatically merge custom schema extensions
SCHEMA_SYNC_AUTO_MERGE=false

# Force regeneration even if no changes detected
SCHEMA_SYNC_FORCE_REGENERATE=false

# Fail startup if schema validation fails
SCHEMA_SYNC_FAIL_ON_VALIDATION_ERROR=true

# ============================================================================
# File Watcher Settings
# ============================================================================

# Debounce period for file watcher (seconds)
# Waits this long after last file change before triggering regeneration
SCHEMA_SYNC_WATCH_DEBOUNCE_SECONDS=2.0

# Watch subdirectories recursively
SCHEMA_SYNC_WATCH_RECURSIVE=true

# ============================================================================
# Backup Settings
# ============================================================================

# Maximum number of backups to keep (older backups are deleted)
SCHEMA_SYNC_MAX_BACKUPS=10

# Compress backup files (not implemented yet)
SCHEMA_SYNC_BACKUP_COMPRESSION=false

# ============================================================================
# Logging Settings
# ============================================================================

# Logging level for schema sync operations
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
SCHEMA_SYNC_LOG_LEVEL=INFO

# Enable verbose logging for debugging
SCHEMA_SYNC_VERBOSE_LOGGING=false

# ============================================================================
# Example Configurations for Different Environments
# ============================================================================

# Development (default)
# - Auto-sync enabled
# - File watching enabled
# - Backups enabled
# - Validation enabled

# Production
# SCHEMA_SYNC_AUTO_SYNC_ENABLED=false
# SCHEMA_SYNC_WATCH_ENABLED=false
# SCHEMA_SYNC_ENVIRONMENT=production

# CI/CD Build
# SCHEMA_SYNC_AUTO_SYNC_ENABLED=true
# SCHEMA_SYNC_WATCH_ENABLED=false
# SCHEMA_SYNC_BACKUP_ENABLED=false
# SCHEMA_SYNC_ENVIRONMENT=staging
