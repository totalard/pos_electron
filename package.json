{
  "name": "pos-electron-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "POS Electron Application Monorepo",
  "scripts": {
    "dev": "concurrently --kill-others-on-fail --kill-signal SIGTERM --names \"backend,frontend\" --prefix-colors \"blue,green\" \"pnpm --filter python-backend dev\" \"pnpm --filter electron-app dev\"",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "turbo": "^2.3.3"
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}

